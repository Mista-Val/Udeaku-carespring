{
  "name": "udeaku-carespring",
  "version": "1.0.0",
  "description": "Udeaku CareSpring Support Foundation - Empowering Communities Through Health Education & Support",
  "main": "src/server/server.js",
  "scripts": {
    "start": "node src/server/server.js",
    "dev": "nodemon src/server/server.js",
    "build": "webpack --mode production",
    "dev:client": "webpack serve --mode development",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.{js,jsx,json,md,html,css}\"",
    "docker:build": "docker build -t udeaku-carespring:latest .",
    "docker:run": "docker run -p 5001:5001 --env-file .env udeaku-carespring:latest",
    "k8s:deploy": "kubectl apply -k k8s/",
    "k8s:delete": "kubectl delete -k k8s/",
    "k8s:logs": "kubectl logs -f deployment/udeaku-carespring -n udeaku-carespring",
    "k8s:status": "kubectl get pods,svc,ingress -n udeaku-carespring"
  },
  "keywords": [
    "first-aid",
    "healthcare",
    "education",
    "nigeria",
    "community-support"
  ],
  "author": "Avalance Tech Solutions",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^5.1.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "paystack-sdk": "^2.5.27",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ]
}
