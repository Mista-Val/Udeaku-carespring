# Production Environment Variables
NODE_ENV=production
PORT=5001

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://udeakucarespringsupportfoundation.org,https://www.udeakucarespringsupportfoundation.org

# API Configuration
API_BASE_URL=https://api.udeakucarespringsupportfoundation.org

# Payment (Paystack)
PAYSTACK_SECRET_KEY=your-production-paystack-secret-key
PAYSTACK_WEBHOOK_SECRET=your-production-paystack-webhook-secret

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Payment (Google Pay)
GOOGLE_PAY_MERCHANT_ID=merchant-xxxxxxxxxxxxxxx
GOOGLE_PAY_ENVIRONMENT=PRODUCTION

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@udeakucarespringsupportfoundation.org
EMAIL_PASS=your-app-password
CONTACT_EMAIL=info@udeakucarespringsupportfoundation.org

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
